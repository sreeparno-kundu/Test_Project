@model List<Test_Project.Models.Student>

@{
    ViewBag.Title = "StudentList";
}

<body style="background-color:white; ">
    <main>
        <div style="border: 3px solid black; border-radius:60px; margin-bottom:30px; background-color:black; background-image: url(https://png.pngtree.com/background/20210714/original/pngtree-simple-atmospheric-blue-gradient-geometric-banner-background-picture-image_1191343.jpg)">
            <h1 class="fw-bolder text-center pt-4 p-3">Student List</h1>
            <div style="height:3px; background-color:black"></div>
            <div class="d-flex justify-content-between  rounded-pill p-5 pb-3 pt-4">
                <button type="button" id="insertBtn" class="btn btn-primary rounded-pill fw-semibold" style="border: 3px solid white;">Insert New Student</button>
                <br />

                <div class="d-flex gap-4">
                    <input type="text" id="searchInput" class="form-control vw-100 rounded-pill fw-semibold" placeholder="Search by ID, Name, or Email" style="border: 2px solid black;" />
                    <button type="button" id="searchBtn" class="btn btn-primary rounded-pill fw-semibold" style="border: 3px solid white;">Search</button>

                </div>
                <br />
                <form method="get" action="@Url.Action("ExportStudentsToExcel")">
                    <button type="submit" class="btn btn-success rounded-pill fw-semibold" style="border: 3px solid white;">Download Excel</button>
                </form>
                <form method="get" action="@Url.Action("UploadExcel")">
                    <button type="submit" class="btn btn-success rounded-pill fw-semibold" style="border: 3px solid white;">Upload Excel</button>
                </form>
            </div>
            <p id="searchMessage" class="text-danger mt-2"></p>
        </div>
        <table class="table table-striped fw-semibold" border="1" cellpadding="10" style=" background-color:mintcream; ">
            <thead class="text-bg-info">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Email</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody id="studentTableBody">
            </tbody>
        </table>

        <div class="d-flex justify-content-center mt-3">
            <button id="prevPageBtn" class="btn btn-outline-primary me-2">Previous</button>
            <div id="paginationControls" class="d-flex flex-wrap">
            </div>
            <button id="nextPageBtn" class="btn btn-outline-primary ms-2">Next</button>
        </div>
    </main>
    <script src="~/Scripts/studentscript.js"></script>
</body>