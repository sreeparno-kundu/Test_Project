@{
    ViewBag.Title = "Upload Excel";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>Upload Excel File</h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("UploadExcel", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    <label for="excelFile" class="form-label">Select Excel File</label>
                    <input type="file" class="form-control" id="excelFile" name="excelFile" accept=".xls,.xlsx" required />
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Upload and Process</button>
                    <a href="@Url.Action("ExcelData", "Home")" class="btn btn-secondary">View Uploaded Data</a>
                </div>
            }
        </div>
    </div>
</div>